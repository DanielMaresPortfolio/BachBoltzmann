<Window x:Class="BachBoltyman.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BachBoltyman"
        mc:Ignorable="d"
        Title="Results" Height="500" Width="500">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- big grid elements -->
        <ListBox x:Name="TimeSelect" SelectionChanged="ListBox_SelectionChanged" ItemsSource="{Binding AllTime}" />
        <Image x:Name="Heatmap" Grid.Column="1"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Update" Click="Button_Click"/>
        <StackPanel Grid.Column="2" Grid.Row="0">
            <RadioButton Content="Density" x:Name="DensityMap" IsChecked="True" GroupName="MapButton"/>
            <RadioButton Content="Speed in X" x:Name="SpeedXMap" GroupName="MapButton"/>
            <RadioButton Content="Speed in Y" x:Name="SpeedYMap" GroupName="MapButton"/>
            <RadioButton Content="Total Speed" x:Name="SpeedsMap" GroupName="MapButton"/>
        </StackPanel>
        <Label Grid.Column="2" Grid.Row="1" x:Name="MinMaxMap"/>
        <!-- finer elements -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!--  <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/> -->
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!-- input place -->
            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding InputX}"/>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding InputY}" />
            <!-- output f, density and spead -->
            <!--   <Label Grid.Row="0" Grid.Column="1" x:Name="F6"/>
            <Label Grid.Row="0" Grid.Column="2" x:Name="F2"/>
            <Label Grid.Row="0" Grid.Column="3" x:Name="F5"/>
            <Label Grid.Row="1" Grid.Column="1" x:Name="F3"/>
            <Label Grid.Row="1" Grid.Column="2" x:Name="F0"/>
            <Label Grid.Row="1" Grid.Column="3" x:Name="F1"/>
            <Label Grid.Row="2" Grid.Column="1" x:Name="F7"/>
            <Label Grid.Row="2" Grid.Column="2" x:Name="F4"/>
            <Label Grid.Row="2" Grid.Column="3" x:Name="F8"/> -->

            <Label Grid.Row="0" Grid.Column="5" x:Name="Density"/>
            <Label Grid.Row="1" Grid.Column="5" x:Name="SpeedInX"/>
            <Label Grid.Row="3" Grid.Column="5" x:Name="SpeedInY"/>
         
        </Grid>
    </Grid>
</Window>
